    <title>Basic Calculator</title>

    <style>
        body {
            background: #f2f2f2;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: Arial, sans-serif;
        }

        .calculator {
            background: #fff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 0px 20px rgba(0,0,0,0.1);
            width: 270px;
        }

        #display {
            width: 100%;
            height: 60px;
            font-size: 28px;
            text-align: right;
            padding: 10px;
            border: none;
            background: #e9e9e9;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        button {
            padding: 18px;
            font-size: 18px;
            border: none;
            border-radius: 10px;
            background: #e3e3e3;
            cursor: pointer;
            transition: 0.2s;
        }

        button:hover {
            background: #cfcfcf;
        }

        .operator {
            background: #4b6cb7;
            color: white;
        }

        .operator:hover {
            background: #3b5aa0;
        }

        .equal {
            background: #28a745;
